	<center>
		<BorderPane fx:id="buttonPane2">
							    <padding><Insets top="300" right="25" bottom="25" left="250" /></padding>
		
			<top>
				
			</top>
			<left>
				<VBox>
					<ImageView fx:id="imageView" fitHeight="500.0"
						fitWidth="500.0" layoutX="500.0" layoutY="500.0"
						pickOnBounds="true" preserveRatio="true">
						<image>
							<Image url="graphics/mesopatterns/ambush.png"
								backgroundLoading="true" />
